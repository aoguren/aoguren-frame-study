<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 属性特定配置，或引入属性资源 -->
	<properties resource="application.properties">
		<property name="password" value="root" />
	</properties>
	<!--<properties resource="application.properties"/>-->

	<!-- 类型别名，简化名称 -->
	<typeAliases>
		<!--<typeAlias alias="Student" type="com.glxt.po.Student" />-->
		<package name="com.glxt.po"/>
	</typeAliases>

	<!-- 类型处理器，Java与JDBC类型相互转换-->
	<typeHandlers>
		<typeHandler handler="com.glxt.typehandlers.PhoneTypeHandler"></typeHandler>
	</typeHandlers>

	<environments default="development">
	    <environment id="development">
	      	<transactionManager type="JDBC"/>
				<dataSource type="POOLED">
					<property name="driver" value="${jdbc.driverClassName}"/>
					<property name="url" value="${jdbc.url}"/>
					<property name="username" value="${jdbc.username}"/>
					<property name="password" value="${password}"/>
			  	</dataSource>
	    </environment>
	</environments>
	  
	<mappers>
	    <mapper resource="com/glxt/mappers/StudentMapper.xml"/>
	</mappers>
  	
</configuration>
